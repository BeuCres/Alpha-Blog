<div class="container">
  <div class="row justify-content-center">
    <div class="col=10">
      <%= render 'shared/errors' %>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
          <div class="form-group row">
              <%= f.label :title , class: "col-2 col-form-label text-light" %>
              <div class="col-10">
                <%= f.text_field :title , class: "form-control shadow rounded mb-3", placeholder: "Article Title" %>
              </div>
          </div>
          <div class="form-group row">
              <%= f.label :description , class: "col-2 col-form-label text-light"%>
              <div class="col-10">
                <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of Article" %> 
              </div>
          </div>
          <div class="form-group row justify-content-center">
              <%= f.submit class: "btn btn-outline-light col-3 mt-2 mb-2" %> 
          </div>
        <% end %>
    </div>
    <%= link_to "Return to articles listing", articles_path, class: "text-center text-info" %> 
  </div>
</div>
